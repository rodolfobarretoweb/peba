<% cache do %>

<nav class='navbar navbar-default'>
  <div class='container'>
    <div class='navbar-header'>
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-mobile">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <a class='navbar-brand hidden-xs' href='<%= root_path %>'>
        <%= image_tag 'peba_logo_navbar.png', alt: 'Peba' %>
      </a>
    </div>

    <div class='collapse navbar-collapse' id="navbar-collapse-mobile">
      <ul class='nav navbar-nav'>
        <%= render partial: 'partials/common_links' %>
      </ul>

      <div class='nav navbar-form navbar-right hidden-sm hidden-xs'>
        <% if(current_page?(root_path)) %>

          <div class='social'>
            <%= render(
                partial: 'partials/social',
                locals: { url: @opengraph[:url], description: @opengraph[:description] }
              )
            %>
          </div>

        <% else %>
          <%= link_to('Continue Cavando', aleatorio_path, class: 'btn btn-default btn-sm') %>
        <% end %>
      </div>

    </div>
  </div>
</nav>

<% end %>
